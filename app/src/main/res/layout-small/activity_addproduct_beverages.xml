<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/customemenu"
    android:layout_height="match_parent"
    tools:context=".addproductBeverages">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/stickBeverages">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/toolbarCustomBiryani"
            android:background="@drawable/customtoolbar"
            app:title="Add your item to cart"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/customemenu"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@+id/stickBeverages">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/customemenu"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="center"
                android:src="@drawable/bg1"
                android:id="@+id/addProductBeveragesImage"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addProductBeveragesName"
                android:text="name"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/addProductBeveragesImage"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addProductBeveragesPrice"
                android:text="description"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:layout_below="@id/addProductBeveragesName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addProductBeveragesOption"
                android:text="Select any option given below"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_below="@id/addProductBeveragesPrice"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroupBeverages"
                android:layout_below="@id/addProductBeveragesOption"
                android:layout_marginTop="20dp">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price half plate"
                    android:id="@+id/addProductBeverages500ml"
                    android:textAlignment="center"
                    android:textColor="#DD1414"
                    android:textSize="25sp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price full  plate"
                    android:textColor="#DD0C0C"
                    android:id="@+id/addProductBeverages1L"
                    android:textAlignment="center"
                    android:textSize="25sp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price 2L  plate"
                    android:textColor="#DD0C0C"
                    android:id="@+id/addProductBeverages2L"
                    android:textAlignment="center"
                    android:textSize="25sp"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroupBeverages"
                android:id="@+id/horizontalButton"
                android:layout_marginTop="40dp"
                android:background="@drawable/border"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="âˆ’"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center_vertical"
                    android:background="@drawable/border1"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:id="@+id/addProductBeveragesDecrement"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:background="@drawable/border1"
                    android:fontFamily="@font/aclonica"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:id="@+id/addProductBeveragesCount"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:background="@drawable/border1"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:id="@+id/addProductBeveragesIncrement"/>
            </LinearLayout>

            <Button
                android:id="@+id/addProductBeveragesButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/customutton2"
                android:text="ADD TO CART" />


        </RelativeLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>