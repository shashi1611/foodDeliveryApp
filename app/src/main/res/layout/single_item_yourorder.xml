<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/borderblaci1"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Order"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Order"
                android:layout_weight="1"
                android:id="@+id/dateOfOrderYourOrder"
                android:textAlignment="viewEnd"
                android:textSize="15sp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Count"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Price"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Plate"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="item name"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/itemNameYourOrder"
                android:textSize="13sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="item count"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/itemCountYourOrder"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="item price"
                android:layout_margin="5dp"
                android:id="@+id/itemPriceYourOrder"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="price"
                android:id="@+id/itemPlateYourOrder"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order Status"
                android:textAlignment="viewStart"
                android:textColor="#000"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Order"
                android:layout_weight="1"
                android:id="@+id/orderCompleteStatusYourOrder"
                android:textAlignment="viewEnd"
                android:textSize="15sp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total price"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Order"
                android:layout_weight="1"
                android:id="@+id/grandTotalYourOrder"
                android:textAlignment="viewEnd"
                android:textSize="15sp"
                android:textColor="#151414"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="rupees"
                android:layout_weight="1.4"
                android:layout_marginLeft="2dp"
                android:textAlignment="viewStart"
                android:textSize="15sp"
                android:textColor="#151414"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>