<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageDialog"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/successlogo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success"
        android:textAlignment="center"
        android:textSize="35sp"
        android:id="@+id/success"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_below="@id/imageDialog"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="congratulation your order is placed successfully"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/congo"
        android:gravity="center"
        android:textColor="#000"
        android:layout_below="@id/success"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ok"
        android:layout_marginLeft="100dp"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="#0BD513"
        android:background="@drawable/customemenu"
        android:layout_below="@id/congo"
        android:id="@+id/buttonOK"/>

</RelativeLayout>